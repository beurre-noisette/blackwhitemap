{
  "compilerOptions": {
    /* 기본 옵션 */
    "target": "ES2020",                          // 최신 JavaScript 기능 사용
    "useDefineForClassFields": true,             // 클래스 필드 정의 방식
    "lib": ["ES2020", "DOM", "DOM.Iterable"],    // 사용할 라이브러리
    "module": "ESNext",                          // 모듈 시스템
    "skipLibCheck": true,                        // 라이브러리 타입 체크 스킵 (빌드 속도 향상)

    /* Bundler 모드 */
    "moduleResolution": "bundler",               // Vite와 같은 번들러 사용
    "allowImportingTsExtensions": true,          // .ts 확장자 import 허용
    "isolatedModules": true,                     // 각 파일을 독립적으로 트랜스파일
    "moduleDetection": "force",                  // 모든 파일을 모듈로 처리
    "noEmit": true,                              // 타입 체크만 수행 (빌드는 Vite가 담당)
    "jsx": "react-jsx",                          // React 17+ JSX 변환 방식

    /* Linting */
    "strict": true,                              // 엄격한 타입 체크 활성화
    "noUnusedLocals": true,                      // 사용하지 않는 지역 변수 경고
    "noUnusedParameters": true,                  // 사용하지 않는 매개변수 경고
    "noFallthroughCasesInSwitch": true,          // switch문 fallthrough 경고
    "noUncheckedIndexedAccess": true,            // 배열/객체 인덱스 접근 시 undefined 체크

    /* Path Mapping */
    "baseUrl": ".",                              // 경로 해석의 기준 디렉토리
    "paths": {
      "@/*": ["./src/*"]                         // @로 시작하는 경로를 src로 매핑
    }
  },
  "include": ["src"],                            // 타입 체크 대상 디렉토리
  "references": [{ "path": "./tsconfig.node.json" }]
}
